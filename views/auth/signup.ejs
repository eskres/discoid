<h1> Create Account </h1>

<form method="POST" action="/auth/signup">
    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="firstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="lastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input type="email" name="emailAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone number</label>
        <input type="string" name="phoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>House Number</label>
        <input type="number" name="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Street Name</label>
        <input type="string" name="streetName" class="form-control" />
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="string" name="city" class="form-control" />
    </div>
    <div class="form-group">
        <label>Post Code</label>
        <input type="string" name="postCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control" />
    </div>

    <br>

    <div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
</form>