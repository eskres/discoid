<div class=" sam row row-cols-3">


    <% records.forEach(function(record){ %>
        <div class="cols">
            <div class="card">
                <img class="card-img-top" src="<%= record.albumCover%>" alt="Card image cap" width="150px"
                    height="350px">
                <div class="cardbody card-body">
                    <a href="/records/detail?id=<%= record._id %>">
                        <h5 class="card-title">
                            <%= record.title %>
                    </a>
                    <p class="card-text">
                        <%= record.artist %>
                    </p>
                </div>
                <div class="price card-footer">
                    <h5 class="text-muted">Â£<%= record.askingPrice %></h5>
                </div>
                <div class='buy buyindex'>
                    <h4><a href="/cart/add/<%= record._id %>">BUY</a></h4>
                </div>
            </div>
        </div>
        <% }) %>
</div>