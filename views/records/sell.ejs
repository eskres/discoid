<h1> List your record </h1>

<form method="POST" action="/record/add">

<div class="form-group">
    <label>Title</label>
    <input name="title" type="text" class="form-control"/>
</div>

<div class="form-group">
    <label>Artist</label>
    <input name="artist" class="form-control"></input>
</div>

<div class="form-group">
    <label>Release Date</label> 
<input name="releaseDate" type="text" class="form-control"/>
</div>

<div class="form-group">
    <label>Condition</label>
    <input type="number" name="totalWords" class="form-control" />
</div>

<div class="form-group">
    <label>Description</label>
    <textarea type="text" name="author" class="form-control"></textarea>
</div>

<!-- <input type="hidden" name="id" value="<%=user._id %>"> -->

<div class="form-group">
    <label>user</label>
    <select name="user[]" multiple="multiple" class="form-control">

        <% user.forEach(function(user) {     %> 
            <option value="<%= user._id %>" > <%= user.name %> </option>
        <% }) %>

    </select>
</div>





<button type="submit" class="btn btn-primary">
    List for sale
</button>

</form>